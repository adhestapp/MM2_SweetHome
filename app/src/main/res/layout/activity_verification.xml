<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bkg"
    tools:context=".view.VerificationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Cek Email Kamu"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Masukkan kode OTP yang telah"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="dikirimkan melalui email kamu"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/primary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/otpET1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border2"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/otpET2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border2"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/otpET3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border2"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/otpET4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border2"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"

                android:gravity="center">
            <TextView
                android:id="@+id/ver_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:text="Kirim ulang email"
                android:fontFamily="@font/montserrat"/>
            <TextView
                android:id="@+id/ver_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="1:00"
                android:fontFamily="@font/montserrat"
                />

            </LinearLayout>

            <Button
                android:id="@+id/btn_ver"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/montserrat_medium"
                android:text="Verifikasi"
                app:cornerRadius="100dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>